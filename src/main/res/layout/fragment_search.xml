<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextGolesFavor"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Goles a favor:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextGolesContra"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Goles en contra:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextLigaId"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Liga ID:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enviar"
        android:text="ENVIAR"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/editTextIdEliminar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="ID del partido a eliminar:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEliminar"
        android:text="ELIMINAR POR ID"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/editTextIdActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="ID del partido a actualizar:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextgolesFavor"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nuevos goles a favor:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextgolesContra"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nuevos goles en contra:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnActualizar"
        android:text="ACTUALIZAR PARTIDO"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando datos..."
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/guantes"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/guantes"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/infoPartidos"
        android:text="DATOS DE LOS PARTIDOS"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

</ScrollView>