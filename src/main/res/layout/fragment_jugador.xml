<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextNombreJugador"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Nombre del jugador:"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextDorsalJugador"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Dorsal del jugador:"
            android:inputType="number"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextValorJugador"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Valor del jugador:"
            android:inputType="number"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextPosicionJugador"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Posicion del jugador:"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextEdadJugador"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Edad del jugador:"
            android:inputType="number"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextNombreEquipo"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Nombre del equipo:"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enviar"
            android:text="ENVIAR"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_azul"
            app:backgroundTint="@null"
            app:cornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/imgDecorativa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/dorsal"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/editTextIdEliminar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="ID del jugador a eliminar:"
            android:inputType="number"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:text="ELIMINAR POR ID"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_azul"
            app:backgroundTint="@null"
            app:cornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true" />

        <EditText
            android:id="@+id/editTextIdActualizar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="ID del jugador a actualizar:"
            android:inputType="number"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextNombreJugadorActualizar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Nombre del jugador a actualizar:"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextDorsalJugadorActualizar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Nuevo dorsal del jugador:"
            android:inputType="number"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextValorJugadorActualizar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Nuevo valor del jugador:"
            android:inputType="number"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextPosicionJugadorActualizar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Nueva posicion del jugador:"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <EditText
        android:id="@+id/editTextEdadJugadorActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nueva edad del jugador:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

        <EditText
            android:id="@+id/editTextNombreEquipoActualizar"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:elevation="4dp"
            android:ems="10"
            android:hint="Nombre del equipo:"
            android:inputType="text"
            android:padding="16dp"
            android:textAlignment="textStart"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="112dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActualizar"
            android:text="ACTUALIZAR JUGADOR"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_azul"
            app:backgroundTint="@null"
            app:cornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando datos..."
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:paddingBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/infoJugador"
            android:text="INFO JUGADOR"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_azul"
            app:backgroundTint="@null"
            app:cornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="12dp"
            android:stateListAnimator="@null"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>
</ScrollView>
