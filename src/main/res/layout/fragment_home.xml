<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true">

<LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextEquipo"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nombre del equipo:"
        android:inputType="text"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextPuntos"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Puntos:"
        android:inputType="text"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEnviar"
        android:text="ENVIAR"
        android:textColor="@color/white"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="6dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/editTextIdEliminar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="ID del equipo a eliminar:"
        android:inputType="text"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEliminar"
        android:text="ELIMINAR POR ID"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/editTextIdActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="ID del equipo a actualizar:"
        android:inputType="text"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextEquipoActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nuevo nombre del equipo:"
        android:inputType="text"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextPuntosActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nuevos puntos del equipo:"
        android:inputType="text"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnActualizar"
        android:text="ACTUALIZAR EQUIPO"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imgDecorativa"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/porteria"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando datos..."
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/infoEquipo"
        android:text="DATOS DEL EQUIPO"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

</ScrollView>