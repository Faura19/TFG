<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextAnoFundacion"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Ano fundacion:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextCapacidadEstadio"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Capacidad Estadio:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTexttitulos"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Titulos:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextEntradaPartido"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Entrada del partido:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextIdLiga"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="ID liga:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/enviar"
        android:text="ENVIAR"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <EditText
        android:id="@+id/editTextIdEliminar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="ID del equipo a eliminar:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/eliminar"
        android:text="ELIMINAR POR ID"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/imgDecorativa"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/estadio"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/editTextIdActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="ID del equipo a actualizar:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextAnoFundacionActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nuevo ano de fundacion:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextCapacidadEstadioActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nueva capacidad del estadio:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTexttitulosActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nuevos titulos:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <EditText
        android:id="@+id/editTextEntradaPartidoActualizar"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Nuevos precios de las entradas:"
        android:inputType="number"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="112dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actualizar"
        android:text="ACTUALIZAR EQUIPO"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando datos..."
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/infoPerfil"
        android:text="DATOS DEL PERFIL"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:background="@drawable/btn_azul"
        app:backgroundTint="@null"
        app:cornerRadius="6dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:paddingVertical="6dp"
        android:paddingHorizontal="12dp"
        android:stateListAnimator="@null"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

</ScrollView>